  <div class="container">  
    <% @posts.each do |post| %>
      <div class="row pt-4 pb-4">
        <div class="col-md-6">
          <h2>Name:</h2>
          <h3><%= post.name %></h2>
        </div>
          <div class="col-md-6">
            <h2>Content:</h2>
            <h5><%= post.content %></h5>
          </div>
              <% if is_admin %>
        <div class="btn btn-danger"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
        </div>
    <% end %>
  </div>